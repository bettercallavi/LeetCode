class Solution {
    public int longestConsecutive(int[] nums) {
        Set<Integer> set=new HashSet<>();
        for(int num:nums){
            set.add(num);
        }
        int res=0;

        for(int num:set){
            int temp=1;
            int cur=num;
            if(!set.contains(num-1)){
                while(set.contains(cur+1)){
                   cur=cur+1;
                    temp++;
            }}
             res=Math.max(res,temp);
        }
     return res;   
    }
}
